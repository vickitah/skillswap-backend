{
  "swagger": "2.0",
  "info": {
    "title": "SkillSwap API",
    "description": "API documentation for the SkillSwap platform.",
    "version": "1.0.0"
  },
  "host": "skillswap-backend-qky7.onrender.com",
  "basePath": "/api",
  "schemes": ["https"],
  "paths": {
    "/login": {
      "post": {
        "summary": "Login with Firebase ID token",
        "description": "Accepts a Firebase ID token and returns a JWT",
        "parameters": [
          {
            "name": "idToken",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "idToken": {
                  "type": "string"
                }
              },
              "required": ["idToken"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "JWT issued"
          },
          "401": {
            "description": "Invalid ID token"
          }
        }
      }
    },
    "/protected": {
      "get": {
        "summary": "Check token authentication",
        "security": [{ "BearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Authenticated user info"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/skills": {
      "get": {
        "summary": "Fetch all skill exchange posts",
        "parameters": [
          {
            "name": "search",
            "in": "query",
            "type": "string"
          },
          {
            "name": "category",
            "in": "query",
            "type": "string"
          },
          {
            "name": "tags",
            "in": "query",
            "type": "array",
            "items": { "type": "string" },
            "collectionFormat": "multi"
          }
        ],
        "responses": {
          "200": {
            "description": "List of skill exchanges"
          }
        }
      },
      "post": {
        "summary": "Create a new skill exchange",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "offering": { "type": "string" },
                "wanting": { "type": "string" },
                "description": { "type": "string" },
                "category": { "type": "string" },
                "tags": {
                  "type": "array",
                  "items": { "type": "string" }
                }
              },
              "required": ["offering", "wanting"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Skill created"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    },
    "/profile/{username}": {
      "get": {
        "summary": "Fetch a user's public profile",
        "parameters": [
          {
            "name": "username",
            "in": "path",
            "required": true,
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "Profile data"
          },
          "404": {
            "description": "User not found"
          }
        }
      }
    },
    "/profile/update": {
      "put": {
        "summary": "Update user profile",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "bio": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Profile updated" },
          "401": { "description": "Unauthorized" }
        }
      }
    },
    "/profile/delete-skill": {
      "post": {
        "summary": "Delete a skill from a profile",
        "security": [{ "BearerAuth": [] }],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "skill": { "type": "string" },
                "type": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": { "description": "Skill deleted" },
          "401": { "description": "Unauthorized" }
        }
      }
    }
  },
  "securityDefinitions": {
    "BearerAuth": {
      "type": "apiKey",
      "name": "Authorization",
      "in": "header",
      "description": "JWT token in format: Bearer <token>"
    }
  }
}
